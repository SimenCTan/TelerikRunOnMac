<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ViewModelToViewConverter"
             xmlns:local="clr-namespace:ViewModelToViewConverter"
             x:Class="ViewModelToViewConverter.MainPage"
             x:DataType="local:MainPage"
             Title="View1">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0">

            <Button Text="Change to view 2" Clicked="Button_Clicked"/>

            <ContentView Content="{Binding Title , Converter={x:Static converters:TheConverter.Instance}}"/>

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
